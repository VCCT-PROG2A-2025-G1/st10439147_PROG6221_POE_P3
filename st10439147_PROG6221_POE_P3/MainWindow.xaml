<Window x:Class="st10439147_PROG6221_POE_P3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:st10439147_PROG6221_POE_P3"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="550" Width="420"
       Background="#121212" WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Chat Area -->
        <ScrollViewer Grid.Row="0" Name="ChatScrollViewer" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ChatPanel" Orientation="Vertical" />
        </ScrollViewer>

        <!-- Input Row -->
        <DockPanel Grid.Row="1" Margin="0,10,0,0">
            <TextBox x:Name="UserInput" Width="340" Height="40" FontSize="14"
                     Background="#1F1F1F" Foreground="#00FFF7" BorderThickness="0"
                     Padding="10" HorizontalAlignment="Left" VerticalContentAlignment="Center"
                     BorderBrush="#00FFF7" />
            <Button Content="Send" Width="70" Height="40" FontSize="14"
                    Background="#00FFF7" Foreground="#121212" FontWeight="Bold"
                    Click="SendButton_Click" Cursor="Hand" Margin="10,0,0,0"/>
        </DockPanel>
    </Grid>
</Window>