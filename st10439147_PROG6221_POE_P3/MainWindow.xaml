<Window x:Class="st10439147_PROG6221_POE_P3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CyberGuard AI Assistant" 
        Height="600" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinHeight="400"
        MinWidth="350"
        Background="#0C0F19">

    <Window.Resources>
        <!-- Cybersecurity themed styles -->
        <Style x:Key="CyberButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0096FF" Offset="0"/>
                        <GradientStop Color="#0066CC" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderThickness="1"
                                BorderBrush="#00FF96">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#00AAFF" Offset="0"/>
                                            <GradientStop Color="#0088DD" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CyberTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#1E2332"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#00FF96"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Consolas, Monaco, monospace"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Main layout grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Chat area -->
            <RowDefinition Height="80"/>
            <!-- Input area -->
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Background="#1A1F2E" 
                BorderBrush="#00FF96" 
                BorderThickness="0,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <!-- Bot Icon -->
                <Border Grid.Column="0"
                        Background="#00FF96"
                        CornerRadius="20"
                        Width="35"
                        Height="35"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <TextBlock Text="🛡️" 
                             FontSize="18" 
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center"/>
                </Border>

                <!-- Title and Status -->
                <StackPanel Grid.Column="1" 
                           VerticalAlignment="Center" 
                           Margin="10,0">
                    <TextBlock Text="CyberGuard AI Assistant" 
                             Foreground="#FFFFFF" 
                             FontSize="16" 
                             FontWeight="Bold"
                             FontFamily="Segoe UI, Arial"/>
                    <TextBlock Text="🟢 Online - Ready to assist" 
                             Foreground="#00FF96" 
                             FontSize="10"
                             FontFamily="Segoe UI, Arial"/>
                </StackPanel>

                <!-- Status Indicator -->
                <Ellipse Grid.Column="2"
                        Width="12"
                        Height="12"
                        Fill="#00FF96"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <Ellipse.Effect>
                        <DropShadowEffect Color="#00FF96" 
                                        BlurRadius="8" 
                                        ShadowDepth="0"/>
                    </Ellipse.Effect>
                </Ellipse>
            </Grid>
        </Border>

        <!-- Chat Display Area -->
        <ScrollViewer x:Name="ChatScrollViewer" 
                      Grid.Row="1"
                      Background="#141820"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="5">
            <StackPanel x:Name="ChatPanel" 
                       Margin="5">
                <!-- Welcome message -->
                <Border Background="#1E2332"
                        CornerRadius="15"
                        Padding="15,10"
                        Margin="10,10,50,5"
                        HorizontalAlignment="Left"
                        MaxWidth="350"
                        BorderBrush="#00FF96"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="CYBERGUARD AI" 
                                 FontSize="9" 
                                 FontWeight="Bold" 
                                 Foreground="#00FF96"
                                 Margin="0,0,0,4"/>
                        <TextBlock Text="🛡️ Welcome to CyberGuard AI Assistant! I'm here to help you with cybersecurity questions, threat analysis, and security best practices. How can I protect you today?"
                                 Foreground="#DCFFDC"
                                 TextWrapping="Wrap"
                                 FontSize="13"
                                 FontFamily="Consolas, Monaco, monospace"
                                 LineHeight="18"/>
                        <TextBlock Text="System initialized"
                                 FontSize="8"
                                 Foreground="#787878"
                                 Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Input Area -->
        <Border Grid.Row="2" 
                Background="#1A1F2E" 
                BorderBrush="#00FF96" 
                BorderThickness="0,2,0,0"
                Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Input TextBox -->
                <TextBox x:Name="UserInput"
                         Grid.Column="0"
                         Style="{StaticResource CyberTextBoxStyle}"
                         VerticalAlignment="Center"
                         AcceptsReturn="False"
                         KeyDown="UserInput_KeyDown"
                         Text="{Binding ElementName=UserInput, Path=Tag, Mode=OneWay}">
                   
                </TextBox>

                <!-- Placeholder text -->
                <TextBlock Grid.Column="0"
                          Text="Ask about cybersecurity, threats, or best practices..."
                          Foreground="#666666"
                          FontStyle="Italic"
                          FontSize="13"
                          Margin="15,0,0,0"
                          VerticalAlignment="Center"
                          IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=UserInput}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Send Button -->
                <Button x:Name="SendButton"
                        Grid.Column="2"
                        Style="{StaticResource CyberButtonStyle}"
                        Click="SendButton_Click"
                        VerticalAlignment="Center"
                        Width="60"
                        Height="35">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🚀" FontSize="12" Margin="0,0,4,0"/>
                        <TextBlock Text="SEND" FontSize="10" FontWeight="Bold"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>