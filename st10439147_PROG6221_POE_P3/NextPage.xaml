<Window x:Class="st10439147_PROG6221_POE_P3.NextPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CyberGuard Setup" 
        Height="400" 
        Width="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Main Border with rounded corners and gradient background -->
        <Border CornerRadius="15" 
                Background="#FF1E1E2E" 
                BorderBrush="#FF3A3A5C" 
                BorderThickness="2">
            <Border.Effect>
                <DropShadowEffect Color="Black" 
                                Direction="315" 
                                ShadowDepth="10" 
                                Opacity="0.5" 
                                BlurRadius="15"/>
            </Border.Effect>

            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header Section -->
                <StackPanel Grid.Row="0" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30">

                    <!-- Close Button -->
                    <Button Name="CloseButton"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,-10,-10,0"
                            Width="50"
                            Height="30"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#FFFF6B6B"
                            FontSize="16"
                            FontWeight="Bold"
                            Content="✕"
                            Cursor="Hand"
                            Click="CloseButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="15">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFFF6B6B"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Title -->
                    <TextBlock Text="Welcome to CyberGuard" 
                              FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="#FF74C0FC"
                              HorizontalAlignment="Center"
                              Margin="0,10,0,5"/>

                    <!-- Subtitle -->
                    <TextBlock Text="Let's get you set up" 
                              FontSize="16" 
                              Foreground="#FFCDD6F4"
                              HorizontalAlignment="Center"
                              Opacity="0.8"/>
                </StackPanel>

                <!-- Main Content -->
                <StackPanel Grid.Row="1" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">

                    <!-- Name Input Section -->
                    <Grid Margin="0,10,0,0" Height="46" Width="300">
                        <TextBox x:Name="NameTextBox"
             Background="#FF2C2F3A"
             Foreground="White"
             FontSize="16"
             Padding="8"
             BorderThickness="1"
             BorderBrush="#FF4D4D4D"
             VerticalContentAlignment="Center"
             />

            <TextBlock Text="Enter your name..."
               Foreground="LightGray"
               FontStyle="Italic"
               FontSize="14"
               Margin="10,0,0,0"
               VerticalAlignment="Center"
               IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=NameTextBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </StackPanel>

                <!-- Button Section -->
                <StackPanel Grid.Row="2" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0">

                    <!-- Back Button -->
                    <Button Name="BackButton"
                        Content="Back"
                        Width="100"
                        Height="40"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Margin="0,0,20,0"
                        Background="#FF585B70"
                        Foreground="#FFCDD6F4"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BackButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                               CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF6C7086"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#FF45475A"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Continue Button -->
                    <Button Name="ContinueButton"
                        Content="Continue"
                        Width="120"
                        Height="40"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#FF74C0FC"
                        Foreground="#FF1E1E2E"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="ContinueButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                               CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF89DCEB"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#FF5DADE2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>