<Window x:Class="st10439147_PROG6221_POE_P3.WelcomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CyberGuard AI - Welcome"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <!-- Main Container with Cybersecurity Theme -->
    <Border CornerRadius="15" Background="#0C0F19" BorderBrush="#00FF96" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="10" BlurRadius="20" Opacity="0.5"/>
        </Border.Effect>

        <Grid Name="MainContent">
            <Grid.RenderTransform>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Grid.RenderTransform>

            <!-- Background Pattern -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0C0F19" Offset="0"/>
                    <GradientStop Color="#1A1F2E" Offset="0.5"/>
                    <GradientStop Color="#0C0F19" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Close Button (X) - Top Right -->
            <Button Name="WindowCloseButton" 
                    Content="✕"
                    Width="30" Height="30"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,10,15,0"
                    Background="Transparent"
                    BorderBrush="#FF4444"
                    BorderThickness="1"
                    Foreground="#FF4444"
                    FontSize="16"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="CloseButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF4444"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Main Content Area -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="50">

                <!-- Logo/Icon Area -->
                <Border Width="120" Height="120" 
                        Background="#00FF96" 
                        CornerRadius="60"
                        Margin="0,0,0,30">
                    <Border.Effect>
                        <DropShadowEffect Color="#00FF96" Direction="0" ShadowDepth="0" BlurRadius="20" Opacity="0.6"/>
                    </Border.Effect>
                    <TextBlock Text="🛡️" 
                               FontSize="60" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Foreground="#0C0F19"/>
                </Border>

                <!-- Title Text -->
                <TextBlock Name="TitleText"
                           Text="CYBERGUARD AI"
                           FontSize="42"
                           FontWeight="Bold"
                           Foreground="#00FF96"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"
                           FontFamily="Consolas, Monaco, monospace">
                    <TextBlock.RenderTransform>
                        <TranslateTransform Y="0"/>
                    </TextBlock.RenderTransform>
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#00FF96" Direction="0" ShadowDepth="0" BlurRadius="10" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- Subtitle Text -->
                <TextBlock Name="SubtitleText"
                           Text="Advanced AI-Powered Cybersecurity Assistant"
                           FontSize="16"
                           Foreground="#B0E0E6"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"
                           FontFamily="Segoe UI, Arial, sans-serif">
                    <TextBlock.RenderTransform>
                        <TranslateTransform Y="0"/>
                    </TextBlock.RenderTransform>
                </TextBlock>

                <!-- Welcome Message Card -->
                <Border Background="#1E2332" 
                        CornerRadius="10" 
                        Padding="25,20"
                        Margin="0,0,0,40"
                        BorderBrush="#00FF96" 
                        BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect Color="#00FF96" Direction="0" ShadowDepth="0" BlurRadius="5" Opacity="0.3"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="🎵 Welcome Message Playing..."
                                   FontSize="14"
                                   Foreground="#00FF96"
                                   HorizontalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>

                        <TextBlock Text="Please wait for the voice greeting to complete before continuing."
                                   FontSize="12"
                                   Foreground="#B0E0E6"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Button Container -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,20,0,0">

                    <!-- Continue Button -->
                    <Button Name="ContinueButton"
                            Content="CONTINUE"
                            Width="150"
                            Height="50"
                            Margin="0,0,20,0"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="White"
                            Cursor="Hand"
                            Click="ContinueButton_Click"
                            Visibility="Hidden">
                        <Button.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Button.RenderTransform>
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#00FF96" Offset="0"/>
                                <GradientStop Color="#00CC77" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="25"
                                                    BorderThickness="0">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#00FF96" Direction="270" ShadowDepth="3" BlurRadius="10" Opacity="0.4"/>
                                                </Border.Effect>
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                <GradientStop Color="#00FFAA" Offset="0"/>
                                                                <GradientStop Color="#00DD88" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                <GradientStop Color="#00CC77" Offset="0"/>
                                                                <GradientStop Color="#00AA66" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Exit Button -->
                    <Button Name="CloseButton"
                            Content="EXIT"
                            Width="150"
                            Height="50"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="White"
                            Cursor="Hand"
                            Click="CloseButton_Click"
                            Visibility="Hidden">
                        <Button.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Button.RenderTransform>
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FF4444" Offset="0"/>
                                <GradientStop Color="#CC3333" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="25"
                                                    BorderThickness="0">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#FF4444" Direction="270" ShadowDepth="3" BlurRadius="10" Opacity="0.4"/>
                                                </Border.Effect>
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                <GradientStop Color="#FF6666" Offset="0"/>
                                                                <GradientStop Color="#DD4444" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                <GradientStop Color="#CC3333" Offset="0"/>
                                                                <GradientStop Color="#AA2222" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                </StackPanel>

                <!-- Footer Info -->
                <TextBlock Text="PROG6221 POE Part 3 | ST10439147 | Dillon Rinkwest"
                           FontSize="10"
                           Foreground="#666666"
                           HorizontalAlignment="Center"
                           Margin="0,30,0,0"
                           FontFamily="Segoe UI, Arial, sans-serif"/>

            </StackPanel>

        </Grid>
    </Border>
</Window>